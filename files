// components/featured-insight.tsx
"use client"

import { useEffect, useState } from "react"
import Link from "next/link"
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card"
import { Button } from "@/components/ui/button"
import { Repeat, ArrowRight } from 'lucide-react'

const insights = [
  {
    title: "Automated crop disease detection for 50+ cooperatives.",
    detail: "Deployed mobile vision workflows to flag early-stage leaf infections.",
  },
  {
    title: "Digitized patient triage for rural clinics.",
    detail: "Reduced intake time by 30% with AI-assisted forms and routing.",
  },
  {
    title: "Optimized NGO grant reporting.",
    detail: "Automations consolidated data across 6 systems with validation.",
  },
]

export function FeaturedInsight({
  sectionTitle = "What We Automated This Week",
  rotateMs = 5000,
}: {
  sectionTitle?: string
  rotateMs?: number
}) {
  const [index, setIndex] = useState(0)

  useEffect(() => {
    const t = setInterval(() => {
      setIndex((prev) => (prev + 1) % insights.length)
    }, rotateMs)
    return () => clearInterval(t)
  }, [rotateMs])

  const current = insights[index]

  return (
    <section className="py-12 md:py-16 bg-gradient-to-b from-[#032d42] to-[#073b54]">
      <div className="container mx-auto px-4">
        <Card className="border-white/10 bg-white/5 backdrop-blur-sm">
          <CardHeader className="flex flex-row items-center justify-between">
            <CardTitle className="text-xl md:text-2xl text-white">{sectionTitle}</CardTitle>
            <Button variant="outline" size="sm" className="hidden md:inline-flex border-white/20 text-white bg-transparent">
              <Repeat className="h-4 w-4 mr-1" />
              Rotate
            </Button>
          </CardHeader>
          <CardContent className="grid grid-cols-1 md:grid-cols-3 gap-6 items-center">
            <div className="md:col-span-2">
              <h3 className="text-lg md:text-xl font-semibold text-white">{current.title}</h3>
              <p className="mt-1 text-white/80">{current.detail}</p>
              <div className="mt-4">
                <Button asChild variant="link" className="p-0 text-[#8bd5ff]">
                  <Link href="/under-construction" className="inline-flex items-center">
                    Read More Insights <ArrowRight className="h-4 w-4 ml-1" />
                  </Link>
                </Button>
              </div>
            </div>
            <div className="rounded-lg ring-1 ring-white/10 overflow-hidden">
              <img
                src="/agriculture-health-automation.png"
                alt="Mini case study visual"
                className="w-full h-auto"
              />
            </div>
          </CardContent>
        </Card>
      </div>
    </section>
  )
}

